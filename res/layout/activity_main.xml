<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/navbar_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/near"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/circle_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/main_left_selector"
            android:text="附近"
            android:visibility="gone"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/circle_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:text="筛选"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bujuxianshi"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/navajowhite"
        android:gravity="center|left"
        android:orientation="horizontal" >

          <TextView
            android:id="@+id/user_info_not"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"          
            android:text="@string/perfect_information"                
            android:textSize="15sp" />
        
       </RelativeLayout>
    
    <ListView
        android:id="@+id/main_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000" 
        android:divider="@null">
    </ListView>

</LinearLayout>