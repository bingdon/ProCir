<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

       

        <ImageView
            android:id="@+id/shai_line_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/shai_line_a" 
            android:visibility="invisible"/>

         <ImageView
             android:id="@+id/shai_head_img"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:layout_gravity="center_vertical"
             android:layout_marginLeft="10dp"
             android:scaleType="centerCrop"
             android:src="@drawable/logo_tra" />
        
        <TextView
            android:id="@+id/shai_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/shai_line_"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/shai_username_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/shai_line_"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/deepskyblue"
            android:layout_toRightOf="@+id/shai_head_img"
            android:textSize="16sp"
           />

        <TextView
            android:id="@+id/shai_content_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shai_username_txt"
            android:layout_toRightOf="@+id/shai_head_img"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"                         
           />
    </RelativeLayout>

</FrameLayout>