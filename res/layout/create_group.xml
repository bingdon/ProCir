<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navbar_bg" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/create_group"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/c_group_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/sigin_back_selector" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	     android:scrollbars="none">
	  <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/white"
	    android:orientation="vertical" >
	    <ImageView
	        android:id="@+id/c_group_camera"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="15dp"
	        android:background="@drawable/camera"
	        android:scaleType="fitXY" />

	    <EditText
	        android:id="@+id/c_group_name"
	        android:layout_width="300dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="15dp"
	        android:background="@drawable/input_box1"
	        android:hint="群名称"
	        android:lines="1"
	        android:paddingLeft="10dp"
	        android:singleLine="true"
	        android:textColor="@color/black"
	        android:textSize="15dp" />
			 <RelativeLayout
			        android:id="@+id/relative_group_add"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="horizontal" 
			     >

			        <TextView
			            android:id="@+id/group_add"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentTop="true"
			            android:layout_marginLeft="10dp"
			             android:layout_marginTop="10dp"
			            android:text="@string/group_add"
			            android:textColor="@color/gray"
			            android:textSize="15dp" />

			            <TextView
			                android:id="@+id/group_add_name"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_alignParentTop="true"
			                android:layout_marginLeft="20dp"
			                android:layout_marginTop="10dp"
			                android:layout_toRightOf="@+id/group_add"
			                android:text="@string/group_add"
			                android:textColor="@color/gray"
			                android:textSize="15dp" />

        </RelativeLayout>
	    <EditText
	        android:id="@+id/c_group_jianjie"
	        android:layout_width="300dp"
	        android:layout_height="200dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="15dp"
	        android:background="@drawable/input_box1"
	        android:gravity="top"
	        android:hint="群简介"
	        android:minLines="5"
	        android:paddingLeft="10dp"
	        android:singleLine="true"
	        android:textColor="@color/black"
	        android:textSize="15dp" />

	    <Button
	        android:id="@+id/c_group_next"
	        android:layout_width="80dp"
	        android:layout_height="40dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="50dp"
	        android:background="@drawable/btn_send_selector"
	        android:layout_gravity="right"
	        android:textColor="@color/white"
	        android:text="完成创建" />
	  </LinearLayout>
 </ScrollView>

</LinearLayout>