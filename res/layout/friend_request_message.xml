<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:background="@drawable/bg_below" >

        <TextView
            android:id="@+id/request_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true" 
            android:text="id"            
            android:textSize="25dp"/>
        

        <TextView
            android:id="@+id/request_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/request_id"
            android:layout_alignBottom="@+id/request_id"
            android:layout_marginLeft="36dp"
            android:layout_toRightOf="@+id/request_id"
            android:text="请求备注"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/request_info"
            android:layout_alignBottom="@+id/request_info"
            android:layout_alignLeft="@+id/request_sure"
            android:layout_marginLeft="29dp"
            android:text="id"
            android:textSize="25dp" />

        <ImageButton
            android:id="@+id/request_deny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/request_sure"
            android:src="@drawable/btn_send_selector" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/accept"
            android:layout_centerVertical="true"
            android:text="接受"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/request_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/request_deny"
            android:src="@drawable/btn_send_selector" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TextView03"
            android:layout_alignBottom="@+id/TextView03"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:text="拒绝"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/accept"
            android:layout_alignRight="@+id/accept"
            android:text="接受"
            android:textColor="#000000"
            android:textSize="15dp" />

</RelativeLayout>