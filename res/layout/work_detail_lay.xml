<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navbar_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/work_detail"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/work_detail_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/sigin_back_selector" />
    </RelativeLayout>

	    <TextView
	        android:id="@+id/work_detail_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        android:layout_marginTop="15dp"
	        android:text=""
	        android:textColor="@color/black"
	        android:textSize="15sp" />

        <TextView
            android:id="@+id/work_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
	        android:layout_marginTop="15dp"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/work_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
	        android:layout_marginTop="15dp"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="15dp" />
    
        <TextView
            android:id="@+id/work_detail_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
	        android:layout_marginTop="15dp"
            android:text=""         
            android:textColor="@color/gray"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/work_detail_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
	        android:layout_marginTop="15dp"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/work_detail_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
	        android:layout_marginTop="15dp"
            android:autoLink="phone"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/work_message_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
	        android:layout_marginTop="15dp"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/work_detail_info"
            android:layout_width="280dp"
            android:layout_height="130dp"
            android:layout_marginLeft="20dp"
	        android:layout_marginTop="15dp"
            android:background="@drawable/input_box1"
            android:ellipsize="end"
            android:maxLines="6"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="15sp" />
 

</LinearLayout>